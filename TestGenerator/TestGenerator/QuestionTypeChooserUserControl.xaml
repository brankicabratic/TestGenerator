<UserControl x:Class="TestGenerator.QuestionTypeChooserUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Background="LightGray">
        <CheckBox Name="cb" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
		<Label Name="lbl" HorizontalAlignment="Left" VerticalAlignment="Center">
			<Label.ToolTip>
				<ToolTip>
					<TextBlock Name="tooltip"></TextBlock>
				</ToolTip>
			</Label.ToolTip>
		</Label>
		<TextBox Name="tbPoints" Width="26" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5">1</TextBox>
    </StackPanel>
</UserControl>
